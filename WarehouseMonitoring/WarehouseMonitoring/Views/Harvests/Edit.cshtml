@model WarehouseMonitoring.Models.Harvest

@{
    ViewData["Title"] = "Edit";
}


<h2>Edit Harvest</h2>

 <div class="form-wrapper">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group2">
                <label asp-for="CroupTypeId"></label>
                <span class="red">*</span>
                <select asp-for="CroupTypeId" class="form-control" asp-items="ViewBag.CroupTypeId"></select> 
            </div>
            <div class="form-group2">
                <label asp-for="RoomId"></label>
                <span class="red">*</span>
                <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                <span asp-validation-for="RoomId" class="text-danger2"></span>
            </div>
            <div class="form-group2">
                <label asp-for="DateOfStorage"></label>
                <span class="red">*</span>
                <input asp-for="DateOfStorage" class="form-control" />
                <span asp-validation-for="DateOfStorage" class="text-danger2"></span>
            </div>
            <div class="form-group2">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger2"></span>
            </div>
            <div class="form-group">
                 <input type="submit" value="Update" class="submit" />
                <input type="reset" value="Reset" class="reset" />
            </div>
        </form>
    </div>


            <div class="d-flex justify-content-center">
                <a asp-action="Index" class="btn btn-info2" >Back</a>
            </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
