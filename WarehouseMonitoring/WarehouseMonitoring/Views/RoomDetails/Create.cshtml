@model WarehouseMonitoring.Models.RoomDetail

@{
    ViewData["Title"] = "Create";
}


<h4> Create Room Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                <span class="red">*</span>
                <select asp-for="RoomId" class ="form-control" asp-items="ViewBag.RoomId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Tempreature" class="control-label"></label>
                <span class="red">*</span>
                <input asp-for="Tempreature" class="form-control" />
                <span asp-validation-for="Tempreature" class="text-danger2"></span>
            </div>
            <div class="form-group">
                <label asp-for="Humidity" class="control-label"></label>
                <span class="red">*</span>
                <input asp-for="Humidity" class="form-control" />
                <span asp-validation-for="Humidity" class="text-danger2"></span>
            </div>
            <div class="form-group">
                 <input type="submit" value="Create" class="submit" />
                <input type="reset" value="Reset" class="reset" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
