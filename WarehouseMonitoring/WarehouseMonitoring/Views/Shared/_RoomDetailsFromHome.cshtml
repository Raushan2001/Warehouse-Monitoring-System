@model WarehouseMonitoring.Models.RoomDetail
 <div class="form-wrapper">

        <form asp-action="FromHomeCreate">
            <div asp-validation-summary="ModelOnly"> </div>
            <div class="form-group2">
                <label asp-for="RoomId" class="control-label"></label>
                <span class="red">*</span>
                <select asp-for="RoomId" class ="form-control" asp-items="ViewBag.RoomId"></select>
            </div>
            <div class="form-group2">
                <label asp-for="Tempreature" ></label>
                <span class="red">*</span>
                <input asp-for="Tempreature" class="form-control" />
                <span asp-validation-for="Tempreature" class="text-danger2"></span>
            </div>
            <div class="form-group2">
                <label asp-for="Humidity"></label>
                <span class="red">*</span>
                <input asp-for="Humidity" class="form-control" />
                <span asp-validation-for="Humidity" class="text-danger2"></span>

            </div>


            <div class="form-group">
                <input type="submit" value="Submit" class="submit" />
                <input type="reset" value="Reset" class="reset" />
            </div>
        </form>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
